{
  "name": "ualibraries/ual-payments",
  "license": "MIT",
  "description": "Payments for UA Libraries",
  "type": "project",
  "require": {
    "php": ">=7.4",
    "ext-SimpleXML": "*",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "ext-json": "*",
    "doctrine/annotations": "^1.0",
    "doctrine/doctrine-bundle": "^2.4",
    "doctrine/doctrine-migrations-bundle": "^2.2",
    "doctrine/orm": "^2.9",
    "guzzlehttp/guzzle": "^7.8",
    "phpdocumentor/reflection-docblock": "^5.2",
    "sensio/framework-extra-bundle": "^6.0",
    "symfony/asset": "5.4.*",
    "symfony/console": "5.4.*",
    "symfony/dotenv": "5.4.*",
    "symfony/expression-language": "5.4.*",
    "symfony/flex": "^1.3.1",
    "symfony/form": "5.4.*",
    "symfony/framework-bundle": "5.4.*",
    "symfony/monolog-bundle": "^3.1",
    "symfony/property-access": "5.4.*",
    "symfony/property-info": "5.4.*",
    "symfony/proxy-manager-bridge": "5.4.*",
    "symfony/security-bundle": "5.4.*",
    "symfony/serializer": "5.4.*",
    "symfony/translation": "5.4.*",
    "symfony/twig-bundle": "5.4.*",
    "symfony/validator": "5.4.*",
    "symfony/web-link": "5.4.*",
    "symfony/webpack-encore-bundle": "^1.9",
    "symfony/yaml": "5.4.*",
    "twig/twig": "^2.12"
  },
  "require-dev": {
    "deployer/dist": "^6.1",
    "deployer/recipes": "^6.1",
    "phploc/phploc": "^7.0",
    "symfony/browser-kit": "^5.4",
    "symfony/debug-bundle": "^5.4",
    "symfony/maker-bundle": "^1.0",
    "symfony/phpunit-bridge": "5.2.*",
    "symfony/stopwatch": "^5.4",
    "symfony/var-dumper": "^5.4",
    "symfony/web-profiler-bundle": "^5.4",
    "theseer/phpdox": "0.12.*"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "platform": {
      "php": "7.4",
      "ext-sockets": "7.4",
      "ext-xsl": "7.4"
    },
    "allow-plugins": {
      "symfony/flex": true
    }
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "replace": {
    "paragonie/random_compat": "2.*",
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php71": "*",
    "symfony/polyfill-php70": "*",
    "symfony/polyfill-php56": "*"
  },
  "scripts": {
    "assets:build": [
      "npm install",
      "npm run build"
    ],
    "deploy:prd": [
      "vendor/bin/dep --ansi deploy prd"
    ],
    "deploy:stg": [
      "vendor/bin/dep --ansi deploy stg"
    ],
    "deploy:rollback": [
      "vendor/bin/dep --ansi rollback prd"
    ],
    "docs:build": [
      "vendor/bin/phploc src/ --log-xml phploc.xml && vendor/bin/phpdox",
      "cp docs/robots.txt docs/phpdox_out/"
    ],
    "docs:deploy": [
      "aws s3 sync docs/phpdox_out s3://ualibr-payments-documentation --delete"
    ],
    "test": [
      "bin/phpunit",
      "vendor/bin/behat --colors"
    ],
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ]
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "minimum-stability": "stable",
  "extra": {
    "symfony": {
      "allow-contrib": false,
      "require": "5.4.*"
    }
  }
}
