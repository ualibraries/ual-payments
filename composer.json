{
  "name": "ual-payments",
  "license": "MIT",
  "description": "Payments for UA Libraries",
  "type": "project",
  "require": {
    "php": "^7.2",
    "ext-iconv": "*",
    "ext-json": "*",
    "ext-SimpleXML": "*",
    "guzzlehttp/guzzle": "^6.3",
    "sculpin/sculpin": "^3.0@dev",
    "sensio/framework-extra-bundle": "5.1.*",
    "symfony/asset": "^3.4",
    "symfony/console": "^3.4",
    "symfony/dotenv": "^3.4",
    "symfony/expression-language": "^3.4",
    "symfony/flex": "^1.0",
    "symfony/form": "^3.4",
    "symfony/framework-bundle": "^3.4",
    "symfony/lts": "^3",
    "symfony/monolog-bundle": "^3.1",
    "symfony/orm-pack": "^1.0",
    "symfony/process": "^3.4",
    "symfony/security-bundle": "^3.4",
    "symfony/serializer-pack": "^1.0",
    "symfony/swiftmailer-bundle": "^3.1",
    "symfony/twig-bundle": "^3.4",
    "symfony/validator": "^3.4",
    "symfony/web-link": "^3.4",
    "symfony/webpack-encore-pack": "^1.0",
    "symfony/yaml": "^3.4"
  },
  "require-dev": {
    "behat/mink": "^1.7",
    "behat/mink-browserkit-driver": "1.3.2",
    "behat/mink-extension": "2.3.1",
    "behat/mink-goutte-driver": "1.2.1",
    "behat/mink-selenium2-driver": "1.3.1",
    "behat/mink-zombie-driver": "^1.4",
    "behat/symfony2-extension": "^2.1",
    "behatch/contexts": "^3.1",
    "deployer/dist": "^6.1",
    "deployer/recipes": "^6.1",
    "symfony/browser-kit": "^3.4",
    "symfony/css-selector": "^3.4",
    "symfony/debug-pack": "^1.0",
    "symfony/maker-bundle": "^1.0",
    "symfony/phpunit-bridge": "^3.4",
    "symfony/profiler-pack": "^1.0",
    "symfony/web-server-bundle": "^3.4"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "replace": {
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php70": "*",
    "symfony/polyfill-php56": "*"
  },
  "scripts": {
    "assets:build": [
      "npm install",
      "npm run build"
    ],
    "deploy:prd": [
      "vendor/bin/dep --ansi deploy prd"
    ],
    "deploy:stg": [
      "vendor/bin/dep --ansi deploy stg"
    ],
    "deploy:rollback": [
      "vendor/bin/dep --ansi rollback prd"
    ],
    "docs:preview": [
      "vendor/bin/sculpin generate --ansi --project-dir=docs --server --watch"
    ],
    "docs:build": [
      "vendor/bin/sculpin generate --ansi --project-dir=docs --env=prod"
    ],
    "docs:deploy": [
      "aws s3 sync docs/output_prod s3://ualibr-payments-documentation --delete"
    ],
    "test": [
      "bin/phpunit",
      "vendor/bin/behat --colors"
    ],
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ]
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "minimum-stability": "stable",
  "extra": {
    "symfony": {
      "id": "01CC79X8FGT176GQ1YRQJHQ9J4",
      "allow-contrib": false
    }
  }
}
